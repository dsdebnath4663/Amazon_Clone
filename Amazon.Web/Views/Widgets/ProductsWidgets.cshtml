@model  Amazon.Web.Models.viewModels.ProductsWidgetViewModel

@{
    ViewBag.Title = "ProductsWidgets";
    var defaultImageURL = "/Content/images/uploaded/faf-dup.jpg";
}

@if (Model != null && Model.Products != null)
{
    @*if (!Model.IsLatestProducts)
        {*@
<ul class="flat-filter style-1 text-center max-width-682 clearfix">
    <li class="active"><a href="#" data-filter="*">All Product</a></li>

    @foreach (var product in Model.Products.ToList().Distinct())
    {
                 <li>
                     <a href="#" data-filter=".@product.Category.Name.Trim()">
                         For   @product.Category.Name ’s
                     </a>
                 </li>
             }
</ul>
    <div class="divider h54"></div>
    @*  }*@

    <div class="product-content product-fourcolumn clearfix">
        <ul class="product style2 clearfix">

            @foreach (var product in Model.Products)
            {

                var imageURL = string.IsNullOrEmpty(product.productImageUrl) ? defaultImageURL : product.productImageUrl;

                <li class="product-item">
                    <div class="product-thumb clearfix">
                        <a href="#" class="product-thumb">
                            <img src="@imageURL" alt="image">
                        </a>
                        @*      @if(Model.IsLatestProducts)
                            {
                                <span class="new"></span>
                            }*@
                    </div>
                    <div class="product-info text-center clearfix">
                        <span class="product-title">
                            @product.Name
                        </span>
                        <div class="price">
                            <ins>
                                <span class="amount">$ @product.Price</span>
                            </ins>
                        </div>
                    </div>
                    <div class="add-to-cart text-center">
                        <a href="#">ADD TO CART</a>
                    </div>
                    <a href="#" class="like"><i class="fa fa-heart-o"></i></a>
                </li>
            }

        </ul>
    </div>

}